<Window
    x:Class="Configurator.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Configurator"
    Name="Window"
    Title="Configurator"
    Width="700"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="viewModels:MainWindowViewModel"
    CanResize="False"
    PointerPressed="InputElement_OnPointerPressed"
    SystemDecorations="Full"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    mc:Ignorable="d">

    <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, *">
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            Orientation="Horizontal">
            <Button Content="Load Config" />
            <Button Content="Export Config" />
            <Button Content="Restore" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="5">
            <ScrollViewer>
                <ListBox ItemsSource="{Binding Packages}" SelectedItem="{Binding SelectedApplication}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <StackPanel.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Exclude" />
                                        <MenuItem Header="Exclude" />
                                        <MenuItem Header="Exclude" />
                                        <MenuItem Header="Exclude" />
                                    </ContextMenu>
                                </StackPanel.ContextMenu>
                                <TextBlock Text="{Binding DisplayName}" />
                                <TextBlock Text="{Binding Publisher}" />
                                <TextBlock Text="{Binding InstallLocation}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="5">
            <TextBlock Margin="5 5 5 5" Text="{Binding SelectedApplication.DisplayName}" />
            <TextBlock Text="Config Settings" />
            <TextBox Margin="5">Hello</TextBox>
            <TextBox Margin="5">Hello</TextBox>
            <TextBox Margin="5">Hello</TextBox>
            <TextBox Margin="5">Hello</TextBox>
            <TextBox Margin="5">Hello</TextBox>
        </StackPanel>
    </Grid>
</Window>
